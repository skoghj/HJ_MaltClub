---
const { img, name, description, beer } = Astro.props;
---

<section class="card @container">
  <div class="bg-accent-500 mx-auto w-[250px] h-[350px] md:w-[350px] md:h-[370px]">
    <div class="flex flex-col items-center mx-auto p-sm">
      <!-- IMG centered -->
      <img src={img} alt="Ã˜lentusiast" class="h-20 w-120 rounded-sm mx-auto mt-sm" />

      <!-- H3 centered -->
      <h5 class="mt-sm md:text-body-md-tablet">{name}</h5>

      <!-- Content container that adjusts based on description size -->
      <div class="flex justify-center items-center w-full">
        <div class="flex-grow">
