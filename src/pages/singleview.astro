---
import MainLayout from "../layouts/MainLayout.astro";
import SingleviewProduktcard from "../components/SingleviewProduktcard.astro";
import SingleviewAnbefalecard from "../components/SingleviewAnbefalecard.astro";
---

<MainLayout title="Singleview">
  <!--Singleview produkt -->
  <section class="bg-gradient-to-r from-[#16312B] to-[#0C1C19] pt-xl main-content">
    <div class="max-w-7xl mx-auto opacity-0 flex"><SingleviewProduktcard /></div>
  </section>

  <!--Singleview anbefalecard sektion -->
  <section class="bg-gradient-to-r from-[#16312B] to-[#0C1C19]">
    <div class="py-ml pb-2xl px-sm md:pb-none md:pt-2xl text-accent-500 flex flex-col max-w-7xl mx-auto">
      <h4 class="text-h1-mobile lg:text-h4-desktop py-ml">Andre kunder købte også</h4>

      <!----------- Carousel for mobile  ------------------>
      <div id="controls-carousel" class="relative w-full md:hidden" data-carousel="static">
        <div class="aspect-[16/20] rounded-xs md:h-auto">
          <!-- Item 1 -->
          <div class="duration-700 ease-in-out w-full" data-carousel-item>
            <SingleviewAnbefalecard cardimage="../img/extra11.webp" cardimagealt="maltclub xl abonnement" procuktnavn="MALTCLUB EXTRA" , kortbeskrivelse="Består af 9-11 kvalitetsøl" , pris="DKK 465" />
          </div>
          <!-- Item 2 -->
          <div class="duration-700 ease-in-out w-full" data-carousel-item>
            <SingleviewAnbefalecard cardimage="../img/classic.webp" cardimagealt="maltclub abonnement" procuktnavn="MALTCLUB CLASSIC" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275" />
          </div>
          <!-- Item 3 -->
          <div class="duration-700 ease-in-out w-full" data-carousel-item>
            <SingleviewAnbefalecard cardimage="../img/pilsner.webp" cardimagealt="maltclub uden ipa abonnement" procuktnavn="MALTCLUB PILSNER" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275" />
          </div>
          <!-- Item 4 -->
          <div class="duration-700 ease-in-out w-full" data-carousel-item>
            <SingleviewAnbefalecard cardimage="../img/gave.webp" cardimagealt="maltclub gave abonnement" procuktnavn="MALTCLUB GAVE" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275" />
          </div>
        </div>
        <!-- Slider controls -->
        <button type="button" class="absolute -top-xl start-0 z-30 flex items-center justify-center h-full cursor-pointer group focus:outline-none md:hidden" data-carousel-prev>
          <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-accent-100 group-hover:bg-accent-300/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
            <svg class="w-4 h-4 text-accent-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"></path>
            </svg>
            <span class="sr-only">Previous</span>
          </span>
        </button>
        <button type="button" class="absolute -top-xl right-[0px] z-30 flex items-center justify-center h-full cursor-pointer group focus:outline-none md:hidden" data-carousel-next>
          <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/80 bg-accent-100 group-hover:bg-accent-300/50 group-focus:ring-4 group-focus:ring-white group-focus:outline-none">
            <svg class="w-4 h-4 text-accent-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"></path>
            </svg>
            <span class="sr-only">Next</span>
          </span>
        </button>
      </div>
      <!------------------Grid layout for desktop----------------------->
      <div class="hidden md:max-w-7xl md:grid md:grid-cols-[repeat(auto-fill,_minmax(290px,_1fr))] md:gap-sm pb-2xl">
        <SingleviewAnbefalecard cardimage="../img/extra11.webp" cardimagealt="maltclub xl abonnement" procuktnavn="MALTCLUB EXTRA" , kortbeskrivelse="Består af 9-11 kvalitetsøl" , pris="DKK 456,00" />

        <SingleviewAnbefalecard cardimage="../img/classic.webp" cardimagealt="maltclub abonnement" procuktnavn="MALTCLUB CLASSIC" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275,00" />

        <SingleviewAnbefalecard cardimage="../img/pilsner.webp" cardimagealt="maltclub uden ipa abonnement" procuktnavn="MALTCLUB PILSNER" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275,00" />

        <SingleviewAnbefalecard cardimage="../img/gave.webp" cardimagealt="maltclub gave abonnement" procuktnavn="MALTCLUB GAVE" , kortbeskrivelse="Består af 5-6 kvalitetsøl" , pris="DKK 275,00" />
      </div>
    </div>
  </section>
</MainLayout>

<!--Plug in til mobil slider -->
<script src="https://cdn.jsdelivr.net/npm/flowbite@1.6.5/dist/flowbite.min.js"></script>
