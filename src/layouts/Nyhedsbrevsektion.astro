---
import Secondarybutton from "../components/Secondarybutton.astro";

---

<article class="bg-accent-500">
  <div id="sektion5" class="flex flex-col sm:flex-row">
    <!-- Left Box: 68% (Text and Buttons) -->
    <div class="w-full sm:w-6/12 flex justify-center">
      <div class="max-w-[90%] py-sm md:py-md lg:py-lg">
        <h3 class=" text-primary-500 mb-2">Spar 20% på første måned</h3>
        <h5 class=" text-primary-500 mb-4">Tilmeld dig vores nyhedsbrev</h5>
        

        <div class="flex flex-col gap-4">
          <div class="w-full">
            <input placeholder="Email" class="w-full rounded-sm bg-white p-3 border border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent placeholder:text-primary-500">
          </div>
          
          <div class="w-full">
            <button class="w-full py-3 font-title font-semibold rounded-sm bg-primary-500 text-white border border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-500 hover:bg-primary-400"> TILMELD </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Box: 32% (Image) -->
    <div class="w-full sm:w-6/12">
      <img src="img/newsletter_flaske.webp" alt="Øl" class="hidden object-contain sm:block w-full h-full">
    </div>
  </div>
</article>
